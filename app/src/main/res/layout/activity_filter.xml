<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Nội dung cuộn -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TIME -->
            <TextView
                android:id="@+id/tvTimeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTime"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Hôm nay, 18:00–20:00"
                app:icon="@drawable/ic_calendar_24"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:shapeAppearanceOverlay="@style/Shape.Rounded14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="?attr/colorOutline"/>

            <!-- LOCATION -->
            <TextView
                android:id="@+id/tvLocationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="8dp"/>

            <!-- Near me / By area (segmented) -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/tgLocationMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNearMe"
                    style="@style/Widget.Material3.Button.FilledTonalButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Near me"
                    app:icon="@drawable/ic_location_24"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnByArea"
                    style="@style/Widget.Material3.Button.FilledTonalButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="By area"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Distance chips (hiện khi Near me) -->
            <LinearLayout
                android:id="@+id/groupDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipDistance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:singleLine="false"
                    app:chipSpacingHorizontal="12dp"
                    app:chipSpacingVertical="12dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip5km"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:text="5 km"
                        app:checkedIconVisible="false"
                        app:chipIconVisible="false"
                        android:checked="true"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip10km"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:text="10 km"
                        app:checkedIconVisible="false"
                        app:chipIconVisible="false"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip20km"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:text="20 km"
                        app:checkedIconVisible="false"
                        app:chipIconVisible="false"/>
                </com.google.android.material.chip.ChipGroup>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFavArea"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:icon="@drawable/ic_favorite_border_24"/>
            </LinearLayout>

            <!-- Province/District dropdowns (hiện khi By area) -->
            <LinearLayout
                android:id="@+id/groupArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="4dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Province/City"
                    app:endIconMode="dropdown">

                    <AutoCompleteTextView
                        android:id="@+id/dropProvince"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Space android:layout_width="12dp" android:layout_height="0dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="District"
                    app:endIconMode="dropdown">

                    <AutoCompleteTextView
                        android:id="@+id/dropDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Space android:layout_width="4dp" android:layout_height="0dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFavArea2"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    app:icon="@drawable/ic_favorite_border_24"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="?attr/colorOutline"/>

            <!-- PRICE -->
            <TextView
                android:id="@+id/tvPriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="8dp"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:value="180000"
                app:valueFrom="50000"
                app:valueTo="330000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:gravity="space_between">

                <TextView
                    android:id="@+id/tvPriceMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₫50 k"/>

                <TextView
                    android:id="@+id/tvPriceMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="330 k"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="?attr/colorOutline"/>

            <!-- COURT ATTRIBUTES -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Court attributes"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipAttributes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                app:chipSpacingHorizontal="12dp"
                app:chipSpacingVertical="12dp">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="Singles"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="Doubles"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="Good ventilation"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="Flooring"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="Wood"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="Mat"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="PU"/>
            </com.google.android.material.chip.ChipGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="?attr/colorOutline"/>

            <!-- AMENITIES + SORT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amenities"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilSort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Sort"
                    app:endIconMode="dropdown">

                    <AutoCompleteTextView
                        android:id="@+id/dropSort"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text="Nearest"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipAmenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacingHorizontal="12dp"
                app:chipSpacingVertical="12dp">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="Parking"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="Drinking water"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="Shower"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="Racket rental"/>
            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Nút dính đáy -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSearch"
        style="@style/Widget.Material3.Button.FilledButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Tìm sân"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        app:shapeAppearanceOverlay="@style/Shape.Rounded14"/>

</androidx.constraintlayout.widget.ConstraintLayout>
