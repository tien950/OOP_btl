<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Home.activities.BookingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sky_400"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <!-- Toolbar với nút quay lại và tiêu đề -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/ivArrowBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Quay lại" />

                <TextView
                    android:id="@+id/tvToolbarTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đặt lịch"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center" />

                <View
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="15dp" />
            </LinearLayout>

            <!-- Nút chọn ngày với mũi tên xuống -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginHorizontal="16dp"
                android:background="@color/sky_400"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">
                <TextView
                    android:id="@+id/tvDatePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@color/sky_400"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="12/10/2025"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/ivArrowDown"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:contentDescription="Chọn ngày"
                    app:tint="@color/white" />
            </LinearLayout>

            <!-- Phần chú thích (Legend) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <TextView style="@style/LegendItem" android:drawableStart="@drawable/legend_square_available_blue" android:text="Trống"/>
                <TextView style="@style/LegendItem" android:drawableStart="@drawable/legend_square_booked" android:text="Đã đặt"/>
                <TextView style="@style/LegendItem" android:drawableStart="@drawable/legend_square_locked" android:text="Khóa"/>
                <TextView style="@style/LegendItem" android:drawableStart="@drawable/legend_square_event" android:text="Sự kiện"/>
            </LinearLayout>

            <!-- Xem sân & bảng giá -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Xem sân &amp; bảng giá"
                android:textColor="@color/sky_100"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- ScrollView chứa phần grid và summary -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <!-- ===================== LỊCH BIỂU (GRID) ===================== -->
            <TextView
                android:id="@+id/tvNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="start"
                android:padding="5dp"
                android:text="Lưu ý:"
                android:textColor="#E9732B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Dải thời gian từ 6:00 đến 23:00 -->
            <HorizontalScrollView
                android:id="@+id/timeHeaderScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginStart="70dp"
                    android:paddingEnd="100dp"
                    android:paddingStart="0dp">
                    <TextView style="@style/TimeHeader" android:text="6:00" />
                    <TextView style="@style/TimeHeader" android:text="6:30" />
                    <TextView style="@style/TimeHeader" android:text="7:00" />
                    <TextView style="@style/TimeHeader" android:text="7:30" />
                    <TextView style="@style/TimeHeader" android:text="8:00" />
                    <TextView style="@style/TimeHeader" android:text="8:30" />
                    <TextView style="@style/TimeHeader" android:text="9:00" />
                    <TextView style="@style/TimeHeader" android:text="9:30" />
                    <TextView style="@style/TimeHeader" android:text="10:00" />
                    <TextView style="@style/TimeHeader" android:text="10:30" />
                    <TextView style="@style/TimeHeader" android:text="11:00" />
                    <TextView style="@style/TimeHeader" android:text="11:30" />
                    <TextView style="@style/TimeHeader" android:text="12:00" />
                    <TextView style="@style/TimeHeader" android:text="12:30" />
                    <TextView style="@style/TimeHeader" android:text="13:00" />
                    <TextView style="@style/TimeHeader" android:text="13:30" />
                    <TextView style="@style/TimeHeader" android:text="14:00" />
                    <TextView style="@style/TimeHeader" android:text="14:30" />
                    <TextView style="@style/TimeHeader" android:text="15:00" />
                    <TextView style="@style/TimeHeader" android:text="15:30" />
                    <TextView style="@style/TimeHeader" android:text="16:00" />
                    <TextView style="@style/TimeHeader" android:text="16:30" />
                    <TextView style="@style/TimeHeader" android:text="17:00" />
                    <TextView style="@style/TimeHeader" android:text="17:30" />
                    <TextView style="@style/TimeHeader" android:text="18:00" />
                    <TextView style="@style/TimeHeader" android:text="18:30" />
                    <TextView style="@style/TimeHeader" android:text="19:00" />
                    <TextView style="@style/TimeHeader" android:text="19:30" />
                    <TextView style="@style/TimeHeader" android:text="20:00" />
                    <TextView style="@style/TimeHeader" android:text="20:30" />
                    <TextView style="@style/TimeHeader" android:text="21:00" />
                    <TextView style="@style/TimeHeader" android:text="21:30" />
                    <TextView style="@style/TimeHeader" android:text="22:00" />
                    <TextView style="@style/TimeHeader" android:text="22:30" />
                    <TextView style="@style/TimeHeader" android:text="23:00" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Grid với tên sân và slots -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Cột tên sân cố định -->
                <LinearLayout
                    android:id="@+id/courtNamesColumn"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <TextView
                        style="@style/CourtName"
                        android:layout_height="40dp"
                        android:text="Sân 1" />

                    <TextView
                        style="@style/CourtName"
                        android:layout_height="40dp"
                        android:text="Sân 2" />

                    <TextView
                        style="@style/CourtName"
                        android:layout_height="40dp"
                        android:text="Sân 3" />
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/gridScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <!-- Bảng lịch biểu -->
                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingEnd="50dp"
                        android:paddingStart="0dp">

                        <!-- Dòng cho Sân 1 -->
                        <TableRow>
                            <View android:id="@+id/slot1_1" style="@style/TimeSlot.Available" />
                            <View android:id="@+id/slot1_2" style="@style/TimeSlot.Available" />
                            <View android:id="@+id/slot1_3" style="@style/TimeSlot.Available" />
                            <View android:id="@+id/slot1_4" style="@style/TimeSlot.Available" />
                            <View android:id="@+id/slot1_5" style="@style/TimeSlot.Available" />
                            <View android:id="@+id/slot1_6" style="@style/TimeSlot.Available" />
                            <View android:id="@+id/slot1_7" style="@style/TimeSlot.Available" />
                            <View android:id="@+id/slot1_8" style="@style/TimeSlot.Available" />
