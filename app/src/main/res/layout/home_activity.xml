<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- =================================================================== -->
    <!-- 1. HEADER CÓ THỂ THU GỌN (APP BAR) -->
    <!-- =================================================================== -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header_gradient"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleEnabled="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                app:layout_collapseMode="parallax">

                <!-- Hàng avatar + tên + chuông -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_chip_green"
                        app:shapeAppearanceOverlay="@style/CircleOverlay" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/ivAvatar"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivNotification"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_circle_white"
                        android:contentDescription="Thông báo"
                        android:padding="6dp"
                        android:src="@drawable/ic_notifications" />
                </RelativeLayout>

                <!-- Ô tìm kiếm -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="28dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <ImageView
                            android:id="@+id/ivSearchLogo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_logo_small" />

                        <EditText
                            android:id="@+id/edtSearch"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_toStartOf="@+id/groupActions"
                            android:layout_toEndOf="@id/ivSearchLogo"
                            android:background="@android:color/transparent"
                            android:hint="Tìm kiếm"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:singleLine="true" />

                        <LinearLayout
                            android:id="@+id/groupActions"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivSearch"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:padding="6dp"
                                android:src="@drawable/ic_search" />

                            <ImageView
                                android:id="@+id/ivHeart"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:padding="6dp"
                                android:src="@drawable/ic_heart" />
                        </LinearLayout>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Dãy chip danh mục có thể cuộn ngang -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:paddingHorizontal="16dp">

                        <TextView
                            style="@style/ChipGrey"
                            android:text="Cầu lông gần tôi" />

                        <TextView
                            style="@style/ChipGrey"
                            android:layout_marginStart="10dp"
                            android:text="Pickleball gần tôi" />

                        <TextView
                            style="@style/ChipGrey"
                            android:layout_marginStart="10dp"
                            android:text="Vé của tôi" />

                        <TextView
                            style="@style/ChipGrey"
                            android:layout_marginStart="10dp"
                            android:text="Sân đã lưu" />

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- =================================================================== -->
    <!-- 2. NỘI DUNG CUỘN (BẰNG NESTEDSCROLLVIEW) -->
    <!-- =================================================================== -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- PHẦN HEADER CHỨA ICON CÁC MÔN THỂ THAO -->
            <include
                layout="@layout/include_home_content_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- NỘI DUNG CUỘN (RECYCLERVIEW) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCourts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="8dp"
                android:paddingBottom="8dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/list_item" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- =================================================================== -->
    <!-- 3. MENU DƯỚI (BOTTOM NAVIGATION VIEW) - LUÔN HIỂN THỊ Ở CUỐI -->
    <!-- =================================================================== -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/sky_400"
        android:elevation="8dp"
        app:itemIconTint="@color/bottom_nav_icon_color"
        app:itemTextAppearanceActive="@style/BottomNavigationActiveText"
        app:itemTextAppearanceInactive="@style/BottomNavigationInactiveText"
        app:itemTextColor="@color/bottom_nav_text_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
